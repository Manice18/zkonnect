generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
  binaryTargets   = ["native", "debian-openssl-3.0.x", "linux-arm64-openssl-1.1.x", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Creator {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  creatorName       String
  walletAddress     String   @unique
  domainOfExpertise String
  eventsInaYear     Int
  noOfFollowers     Int      @default(0)
  isVerified        Boolean  @default(false)
  Events            Events[]
}

model Events {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  eventName     String
  eventDateTo   DateTime
  eventDateFrom DateTime
  ticketPrice   Float
  eventStatus   String
  meetLink      String
  eventDesc     String
  eventBanner   String
  eventCreator  Creator  @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  creatorId     String   @db.ObjectId
  Blink         Blink[]
}

model Blink {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  eventName     String
  eventDesc     String
  blinkIcon     String
  ticketPrice   Float
  walletAddress String
  eventId       String @unique @db.ObjectId
  event         Events @relation(fields: [eventId], references: [id], onDelete: Cascade)
}
